<body>

  <div class="title">TuColegioBQ</div>
 <div class="menu"><a data-no-turbolink="true" href="/colegios">INCIO</a> | <a data-no-turbolink="true" href="/colegios/avanzada">BUSQUEDA AVANZADA</a>  | <a href="/adm_board">ADM</a> | <a href="/creditos">CREDITOS</a></div>

<div id="page-center-simple">
<h1><br><center>SIGN UP</center></h1>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
	 <div class="error_messages">
	   <h2>Form is invalid</h2>
	   <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
	   </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :email %><br/>
    <%=f.text_field :email%>
  <br>
    <%=f.label :password %><br/>
    <%=f.password_field :password %>
  <br>
    <%=f.label :password_confirmation %><br/>
    <%=f.password_field :password_confirmation %>
  </p>
  <p class="button"><%= f.submit%></p>
  <% end%>

</div>
</body>
